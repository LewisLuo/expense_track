<div class="container mt-5" style="width:600px">
  <form action="/records/{{record._id}}?_method=PUT" method="POST">
    <div class="row">
      <div class="col-2 d-flex justify-content-end offset-2">
        <span style="font-size:small">*必填欄位</span>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <span>請修改你的支出</span>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 d-flex justify-content-end offset-2">
        <span>名稱*</span>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <input type="text" name="name" style="width:200px" value="{{record.name}}" required>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 d-flex justify-content-end offset-2">
        <span>日期*</span>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <input type="date" name="date" style="width:200px" value="{{record.date}}" required>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 d-flex justify-content-end offset-2">
        <span>類別*</span>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <select name="category" style="width:200px" required>
          <option value="">請選擇類別</option>
          {{#each categories}}
          <option value="{{this.name}}" {{isMatched this.name ../record.category}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 d-flex justify-content-end offset-2">
        <span>金額*</span>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <input type="text" name="amount" style="width:200px" value="{{record.amount}}" required>
      </div>
    </div>

    <div class="mt-3 d-flex justify-content-center">
      <button type="submit" class="btn btn-success" style="width:250px">送出</button>
    </div>
  </form>
</div>