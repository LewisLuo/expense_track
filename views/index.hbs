<div class="container mt-5" style="width:720px">
  <!-- Category Dropdown -->
  <select name="category" style="width:720px">
    <option>顯示全部</option>
    {{#each categories}}
    <option>{{this.name}}</option>
    {{/each}}
  </select>

  <div class="amount">
    <h1>總金額: {{totalAmount}}</h1>
  </div>

  <ul class="list-group">
    <!-- Render Records -->
    {{#each records}}
    <li class="list-group-item">
      <div class="row d-flex">
        <div class="col-4 mr-auto d-flex flex-row justify-content-between">
          <div class="d-flex flex-column">
            <h5>{{this.name}}</h5>
            <span>{{this.date}}</span>
          </div>
          <div>
            <span class="amount">{{this.amount}}</span>
          </div>
        </div>
        <div class="col-2">
          <a href="/" aria-pressed="true">修改</a>
          <a href="/" aria-pressed="true">刪除</a>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>

  <a href="/records/new" class="btn btn-primary btn-lg" role="button" aria-pressed="true">新增支出</a>

</div>