<div class="container mt-5" style="width:600px">
  <!-- Category Dropdown -->
  <div class="mb-3">
    <form action="/records/filter">
      <select name="category" style="width:300px" onchange="this.form.submit()">
        <option>顯示全部</option>
        {{#each categories}}
        <option value="{{this.name}}" {{isMatched this.name ../filter}}>{{this.name}}</option>
        {{/each}}
      </select>
    </form>
  </div>

  <div class="amount row mb-2">
    <div class="col-sm-2 d-flex align-items-center">
      <span></span>總金額:</span>
    </div>
    <div class="col-sm-5">
      <span style="font-size:50px; font-weight:bold; color:coral">{{totalAmount}}</h1>
    </div>
  </div>

  <ul class="list-group list-group-flush">
    <!-- Render Records -->
    {{#each records}}
    <li class="list-group-item p-0" style="border: 0 none;">
      <div class="row d-flex p-0">
        <div class="row col-7 mr-auto d-flex justify-content-between p-2 ml-3" style="background-color: azure;">
          <div class="d-flex flex-row">
            <div class="icon d-flex align-items-center m-2" style="width:40px">
              <i class="{{mapIcons this.category ../categories}} fa-2x" style="color:aquamarine"
                title="{{this.category}}"></i>
            </div>
            <div class="d-flex flex-column">
              <div class="m-0">
                <span style="font-size:large;">{{this.name}}</span>
              </div>
              <div>
                <span style="font-size:small;">{{this.date}}</span>
              </div>
            </div>
          </div>
          <div class="d-flex align-items-center">
            <span class="amount" style="font-weight:600">{{this.amount}}</span>
          </div>
        </div>
        <div class="col-4 d-flex d-flex align-items-center">
          <a href="/records/{{this._id}}/edit" class="btn btn-outline-none" aria-pressed="true"
            style="color:blue;">修改</a>
          <form action="/records/{{this._id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-outline-none" style="color:red;">刪除</button>
          </form>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>

  <div class="mt-3 d-flex justify-content-center">
    <a href="/records/new" class="btn btn-info" role="button" aria-pressed="true"
      style="width:250px; border:1px solid">新增支出</a>
  </div>
</div>